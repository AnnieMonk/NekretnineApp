@using Nekretnine.Web.ViewModels
@model OglasiDodajVM
@{
    ViewData["Title"] = "Dodaj";
}


    <div class="container-fluid">
        <a href="javascript:history.go(-1)" class="btn btn-danger"><i class="fa fa-arrow-left" data-toggle="tooltip" data-placement="top" title="Vrati se nazad"></i></a>
        <h1 class="text-center">Pripremite oglas</h1>
        <br />
        <br />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/Oglasi/Snimi">
                    <div class="form-group">
                        <label class="control-label">Uposlenik:</label>
                        <input asp-for="UposlenikKorisnickoIme" class="form-control" readonly />
                    </div>
                    <br />

                    <div class="form-group">
                        <label class="control-label">Datum objave: </label>
                        <input asp-for="DatumObjave" readonly class="form-control" /><br />
                        <span asp-validation-for="DatumObjave" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @if (Model.NekretninaID != 0)
                        {
                            <input asp-for="NekretninaID" hidden />
                            <label class="control-label">Odaberite nekretninu:  </label>

                            <select asp-for="NekretninaID" asp-items="@Model.Nekretnine" class="form-control" disabled></select><br />

                        }
                        else
                        {
                            <label class="control-label">Odaberite nekretninu:  </label>
                            <select asp-for="NekretninaID" asp-items="@Model.Nekretnine" class="form-control" data-toggle="tooltip" data-placement="top" title="Ovo polje će biti prazno ako nema nekretnina za objavu">
                                <option value="" disabled selected hidden>Odaberite</option>
                            </select><br />
                            <span asp-validation-for="NekretninaID" class="text-danger"></span>
                        }
                    </div>

                    <div class="form-group">
                        <label class="control-label">Vrsta oglasa: </label>
                        <select asp-for="vrstaOglasaID" asp-items="@Model.vrstaOglasa" class="form-control">
                            <option value="" disabled selected hidden>Odaberite</option>
                        </select><br />
                        <span asp-validation-for="vrstaOglasaID" class="text-danger"></span>
                    </div>

                    <input type="submit" value="Objavi" class="btn btn-info" />



                </form>
            </div>

        </div>
    </div>
